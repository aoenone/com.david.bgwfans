    <style name="CustomUnderlinePageIndicator">
        <item name="selectedColor">#FFCC0000</item>
        <item name="android:background">#FFCCCCCC</item>
        <item name="fadeLength">1000</item>
        <item name="fadeDelay">1000</item>
    </style>

    <style name="CustomTitlePageIndicator">
        <item name="android:background">#2F2F2F</item>
        <item name="footerColor">#B8041C</item>
        <item name="footerLineHeight">1dp</item>
        <item name="footerIndicatorHeight">3dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="android:textColor">#E5E5E5</item>
        <item name="selectedColor">#E5E5E5</item>
        <item name="selectedBold">true</item>
    </style>

    <style name="RedTheme" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">@color/bgwfans_red</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@color/bgwfans_red</item>
        <item name="android:backgroundStacked">@color/stacked</item>
        <item name="android:backgroundSplit">@color/stacked</item>
    </style>

    <style name="ActionBarTabStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_bgwfans</item>
    </style>


    <style parent="@android:style/Theme.Holo" name="Theme.bgwfans">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_bgwfans</item>
        <item name="android:popupMenuStyle">@style/bgwfans_PopupMenu</item>
