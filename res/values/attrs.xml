<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SmoothProgressBar">
        <attr name="spbStyle" format="reference"/>
        <attr name="spb_color" format="color"/>
        <attr name="spb_stroke_width" format="dimension"/>
        <attr name="spb_stroke_separator_length" format="dimension"/>
        <attr name="spb_sections_count" format="integer"/>
        <attr name="spb_speed" format="float"/>
        <attr name="spb_interpolator" format="enum">
            <enum name="spb_interpolator_accelerate" value="0"/>
            <enum name="spb_interpolator_linear" value="1"/>
            <enum name="spb_interpolator_acceleratedecelerate" value="2"/>
            <enum name="spb_interpolator_decelerate" value="3"/>
        </attr>
        <attr name="spb_reversed" format="boolean"/>
        <attr name="spb_mirror_mode" format="boolean"/>
        <attr name="spb_colors" format="reference" />
    </declare-styleable>

    <declare-styleable name="card_options">

        <!-- Layout to build a card. Default value is  @layout/card_base_layout -->
        <attr name="card_layout_resourceID" format="reference"/>

        <!-- Layout to build a shadow. Default value is @layout/base_shadow_layout -->
        <attr name="card_shadow_layout_resourceID" format="reference"/>

        <!-- Layout to build a Header. Default value is @layout/base_header_layout -->
        <attr name="card_header_layout_resourceID" format="reference"/>

        <!-- Layout to build a Thumbnail. Default value is @layout/base_thumbnail_layout -->
        <attr name="card_thumbnail_layout_resourceID" format="reference"/>

        <!-- Layout used by card in a ListView. Default value is  @layout/list_card_layout -->
        <attr name="list_card_layout_resourceID" format="reference"/>

    </declare-styleable>
</resources>