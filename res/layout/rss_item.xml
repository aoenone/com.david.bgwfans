<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oak="http://oak/oak/schema"
    android:orientation="vertical"
    android:layout_margin="12dp"
    android:background="@drawable/rss_card_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <oak.widget.TextViewWithFont
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:text="Welcome to my blog!"
        android:id="@+id/rss_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        oak:font="Roboto-Light.ttf"/>

    <oak.widget.TextViewWithFont
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:text="sept, 12th, 2014"
        android:id="@+id/rss_pub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        oak:font="Roboto-Thin.ttf"/>

</LinearLayout>