<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:bgwfans="http://bgwfanspaid-android/schema"
            xmlns:oak="http://oak/oak/schema"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/hos_background" >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

        <com.david.bgwfanspaid.viewcomponents.AttractionItem
                style="@style/AttractionParams"
                android:id="@+id/hos_dig_it"
                bgwfans:itemIcon="@drawable/digitup"
                bgwfans:itemText="Dig it up!"  />

        <com.david.bgwfanspaid.viewcomponents.AttractionItem
                style="@style/AttractionParams"
                android:id="@+id/hos_fiends"
                bgwfans:itemIcon="@drawable/fiends"
                bgwfans:itemText="Fiends"  />

        <com.david.bgwfanspaid.viewcomponents.AttractionItem
                style="@style/AttractionParams"
                android:id="@+id/hos_nightbeats"
                bgwfans:itemIcon="@drawable/nightbeats"
                bgwfans:itemText="Night Beats"  />

    </LinearLayout>
</ScrollView>