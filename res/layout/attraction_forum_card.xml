<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oak="http://oak/oak/schema"
    android:background="@drawable/selectable_background_bgwfans2"
    android:layout_width="fill_parent"
    android:layout_height="105dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/attraction_image"
            android:src="@drawable/crown_colony"
            android:scaleType="centerCrop"
            android:layout_width="fill_parent"
            android:adjustViewBounds="true"
            android:layout_height="100dp" />

        <View
            android:background="@drawable/attraction_shape"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <oak.widget.TextViewWithFont
            android:id="@+id/attraction_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:gravity="center|left"
            android:paddingTop="6dp"
            android:paddingLeft="6dp"
            android:paddingBottom="5dp"
            android:textSize="22sp"
            android:text="Forum"
            oak:font="Roboto-Thin.ttf" />
    </RelativeLayout>
</LinearLayout>