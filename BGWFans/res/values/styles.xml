<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
         <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
    </style>

    <style name="MenuDrawer" />

    <style name="MenuDrawer.Widget" />

    <style name="MenuDrawer.Widget.Container">
        <item name="mdMenuBackground">@color/md__defaultBackground</item>
        <item name="mdContentBackground">?android:attr/windowBackground</item>
    </style>

    <style name="MenuDrawer.Widget.Category">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/md__category_background</item>

        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuDrawer.Widget.Title">
        <item name="android:background">@drawable/md__list_selector_holo_dark</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    
    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@color/bgwfans_red</item>
        <item name="android:backgroundStacked">@color/stacked</item>
        <item name="android:backgroundSplit">@color/stacked</item>
    </style>
    
    <style name="ActionBarTabStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
    <item name="android:background">@drawable/tab_indicator_ab_bgwfans</item>
</style>
    
    
    
    <style parent="@android:style/Theme.Holo" name="Theme.bgwfans">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_bgwfans</item>
        <item name="android:popupMenuStyle">@style/bgwfans_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/bgwfans_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/bgwfans_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/bgwfans_DropDownNav</item>
        <item name="android:actionBarStyle">@style/bgwfans_transparent_ActionBar</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_bgwfans</item></style>
        
        <style parent="@android:style/Widget.Holo.ActionBar.Solid" name="bgwfans_solid_ActionBar">
            <item name="android:background">@drawable/ab_solid_bgwfans</item>
            <item name="android:backgroundStacked">@drawable/ab_stacked_solid_bgwfans</item>
            <item name="android:backgroundSplit">@drawable/ab_bottom_solid_bgwfans</item>
            <item name="android:progressBarStyle">@style/bgwfans_ProgressBar</item></style>
                      
            <style parent="@android:style/Widget.Holo.ActionBar" name="bgwfans_transparent_ActionBar">   
               <item name="android:background">@drawable/ab_transparent_bgwfans</item>
               <item name="android:progressBarStyle">@style/bgwfans_ProgressBar</item></style>
               
               <style parent="@android:style/Widget.Holo.ListPopupWindow" name="bgwfans_PopupMenu">
                   <item name="android:popupBackground">@drawable/menu_dropdown_panel_bgwfans</item></style>
                   
                   <style parent="@android:style/Widget.Holo.ListView.DropDown" name="bgwfans_DropDownListView">
                       <item name="android:listSelector">@drawable/selectable_background_bgwfans</item></style>
                       <style parent="@android:style/Widget.Holo.ActionBar.TabView" name="bgwfans_ActionBarTabStyle">
                           <item name="android:background">@drawable/tab_indicator_ab_bgwfans</item></style>
                           
                           <style parent="@android:style/Widget.Holo.Spinner" name="bgwfans_DropDownNav">
                               <item name="android:background">@drawable/spinner_background_ab_bgwfans</item>
                               <item name="android:popupBackground">@drawable/menu_dropdown_panel_bgwfans</item>
                               <item name="android:dropDownSelector">@drawable/selectable_background_bgwfans</item></style>
                               
                               <style parent="@android:style/Widget.Holo.ProgressBar.Horizontal" name="bgwfans_ProgressBar">
                                   <item name="android:progressDrawable">@drawable/progress_horizontal_bgwfans</item></style>
                                   
<!-- this style is only referenced in a Light.DarkActionBar based theme -->
<style parent="@android:style/Theme.Holo" name="Theme.bgwfans.widget"><item name="android:popupMenuStyle">@style/bgwfans_PopupMenu</item><item name="android:dropDownListViewStyle">@style/bgwfans_DropDownListView</item></style>

</resources>
