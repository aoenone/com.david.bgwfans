    <style parent="@android:style/Widget.Holo.ActionBar" name="ActionBar.Transparent.Bgwfans2">
        <item name="android:background">@drawable/ab_transparent_bgwfans2</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Bgwfans2</item>
    </style>

    <style parent="@android:style/Widget.Holo.ListPopupWindow" name="PopupMenu.Bgwfans2">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_bgwfans2</item>
    </style>
    <style parent="@android:style/Widget.Holo.ListView.DropDown" name="DropDownListView.Bgwfans2">
        <item name="android:listSelector">@drawable/selectable_background_bgwfans2</item>
    </style>
    <style parent="@android:style/Widget.Holo.ActionBar.TabView" name="ActionBarTabStyle.Bgwfans2">
        <item name="android:background">@drawable/tab_indicator_ab_bgwfans2</item>
    </style>

    <style parent="@android:style/Widget.Holo.Spinner" name="DropDownNav.Bgwfans2">
        <item name="android:background">@drawable/spinner_background_ab_bgwfans2</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_bgwfans2</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_bgwfans2</item>
    </style>

    <style parent="@android:style/Widget.Holo.ProgressBar.Horizontal" name="ProgressBar.Bgwfans2">
        <item name="android:progressDrawable">@drawable/progress_horizontal_bgwfans2</item>
    </style>
    <style parent="@android:style/Widget.Holo.ActionButton.CloseMode" name="ActionButton.CloseMode.Bgwfans2">
        <item name="android:background">@drawable/btn_cab_done_bgwfans2</item>

    </style>
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style parent="@android:style/Theme.Holo" name="Theme.Bgwfans2.Widget">
        <item name="android:popupMenuStyle">@style/PopupMenu.Bgwfans2</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Bgwfans2</item>
    </style>

</resources>
