<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">  
       
   <RelativeLayout
        android:layout_width="fill_parent"
    	android:layout_height="0px"
    	android:layout_weight="1">  	
     <ImageView
        android:id="@+id/alpen"
        android:src="@drawable/alpen3"
        android:scaleType="center"
        android:layout_width="fill_parent"
        android:layout_height="95dp"/>
    	<TextView
    	  	android:id="@+id/attr"
    	    android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_alignParentBottom="true"
        	android:background="#8000"
        	android:textColor="#fff"
        	android:gravity="center|left"
        	android:paddingTop="2dp"
        	android:paddingLeft="5dp"
        	android:paddingBottom="2dp"
        	android:textSize="22sp"
        	android:text="Alpengeist"
        	android:fontFamily="sans-serif-light" />
    		</RelativeLayout>

    <ScrollView
    		android:layout_width="fill_parent"
    		android:layout_height="0px"
    		android:layout_weight="2"
    		android:paddingTop="10dp"
    		android:paddingBottom="10dp"
    		android:id="@+id/info">
        <LinearLayout
        		android:orientation="vertical"
        		android:layout_width="fill_parent"
        		android:layout_height="fill_parent"
        		android:padding="5dp"
        		android:background="@color/md__defaultBackground">
            <TextView android:text="LOCATION" android:layout_width="wrap_content" android:layout_height="fill_parent" android:textSize="20sp"></TextView>
            <TextView android:text="rhinefeld" android:layout_width="wrap_content" android:layout_height="fill_parent" android:textSize="15sp" ></TextView>
            <TextView android:text="TYPE" android:layout_width="wrap_content" android:layout_height="fill_parent" android:textSize="20sp"></TextView>
            <TextView android:text="roller coaster" android:layout_width="wrap_content" android:layout_height="fill_parent" android:textSize="15sp"></TextView>
            <TextView android:text="HEIGHT RESTRICTION" android:layout_width="wrap_content" android:layout_height="fill_parent"  android:textSize="20sp"></TextView>
            <TextView android:text="54 in." android:layout_width="wrap_content" android:layout_height="fill_parent" android:textSize="15sp"></TextView>
            <TextView android:text="DROP" android:layout_width="wrap_content" android:layout_height="fill_parent"  android:textSize="20sp"></TextView>
            <TextView android:text="170 ft." android:layout_width="wrap_content" android:layout_height="fill_parent" android:textSize="15sp"></TextView>
            <TextView android:text="INVERSIONS" android:layout_width="wrap_content" android:layout_height="fill_parent" android:textSize="20sp"></TextView>
            <TextView android:text="6" android:layout_width="wrap_content" android:layout_height="fill_parent" android:textSize="15sp"></TextView>
            <TextView android:text="SPECIAL FEATURES" android:layout_width="wrap_content" android:layout_height="fill_parent"  android:textSize="20sp"></TextView>
            <TextView android:text="immelmann" android:layout_width="wrap_content" android:layout_height="fill_parent" android:textSize="15sp"></TextView>
            <TextView android:text="106' tall loop" android:layout_width="wrap_content" android:layout_height="fill_parent" android:textSize="15sp"></TextView>
            <TextView android:text="cobra roll" android:layout_width="wrap_content" android:layout_height="fill_parent" android:textSize="15sp"></TextView>
            <TextView android:text="zero-g roll" android:layout_width="wrap_content" android:layout_height="fill_parent" android:textSize="15sp"></TextView>
    </LinearLayout>
    </ScrollView>
   
   <RelativeLayout
        android:layout_width="fill_parent"
    	android:layout_height="0px"
    	android:layout_weight="2">       
   	<fragment
  		android:id="@+id/map"
  		android:layout_width="match_parent"
  		android:layout_height="match_parent"
  		class="com.google.android.gms.maps.SupportMapFragment"/>
   	</RelativeLayout>
   	
   <RelativeLayout
        android:layout_width="fill_parent"
    	android:layout_height="0px"
    	android:layout_weight="1"
    	android:id="@+id/wikiButton"
    	android:paddingTop="10dp"
    	android:onClick="Wiki"  >       
     <ImageView
        android:src="@drawable/bbw"
        android:scaleType="center"
        android:layout_width="fill_parent"
        android:layout_height="95dp" /> 
    	<TextView
    	    android:id="@+id/wiki"
    	    android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_alignParentBottom="true"
        	android:background="#8000"
        	android:textColor="#fff"
        	android:gravity="center|left"
        	android:paddingTop="2dp"
        	android:paddingLeft="5dp"
        	android:paddingBottom="2dp"
        	android:textSize="22sp"
        	android:text="Wiki"
        	android:fontFamily="sans-serif-light"/>
    		</RelativeLayout>
   </LinearLayout>