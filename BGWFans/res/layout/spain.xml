<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="5dp">

     <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="1">
        <ImageView
                android:id="@+id/vbolt"
                android:src="@drawable/parkfans"
                android:scaleType="center"
                android:layout_width="fill_parent"
                android:layout_height="95dp"/>
        <TextView
                android:id="@+id/attr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#8000"
                android:textColor="#fff"
                android:gravity="center|left"
                android:paddingTop="2dp"
                android:paddingLeft="5dp"
                android:paddingBottom="2dp"
                android:textSize="22sp"
                android:text="Spain"
                android:fontFamily="sans-serif-light"/>
    </RelativeLayout>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="2"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/info">
        
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"
                android:background="@color/md__defaultBackground">
            <TextView android:text="LOCATION" android:layout_width="wrap_content" android:layout_height="fill_parent"
                      android:textSize="20sp"/>
            <TextView android:text="italy hamlet" android:layout_width="wrap_content" android:layout_height="fill_parent"
                      android:textSize="15sp"/>
            
            <TextView android:text="Menu" android:layout_width="wrap_content" android:layout_height="fill_parent"
                      android:textSize="20sp"/>
			<TextView android:text="chorizo empanada" android:layout_width="wrap_content" android:layout_height="fill_parent"
                      android:textSize="15sp"/>
			<TextView android:text="tapas" android:layout_width="wrap_content" android:layout_height="fill_parent"
                      android:textSize="15sp"/>
			<TextView android:text="vernera con jamon" android:layout_width="wrap_content" android:layout_height="fill_parent"
                      android:textSize="15sp"/>
			<TextView android:text="vanera con jamon" android:layout_width="wrap_content" android:layout_height="fill_parent"
                      android:textSize="15sp"/>
			<TextView android:text="hazelnut custard" android:layout_width="wrap_content" android:layout_height="fill_parent"
                      android:textSize="15sp"/>
			<TextView android:text="beer and wine available" android:layout_width="wrap_content" android:layout_height="fill_parent"
                      android:textSize="15sp"/>
			 
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="2">
        <fragment
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                class="com.google.android.gms.maps.SupportMapFragment"/>
        
    </RelativeLayout>
</LinearLayout>