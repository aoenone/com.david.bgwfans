<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="205dp"
                android:padding="5dp">

            <TextView
                    android:id="@+id/textView2"
                    style="@style/MenuDrawer.Widget.Category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hours and Weather"
                    android:textColor="#fff"
                    android:fontFamily="sans-serif-light"/>

            <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:layout_marginLeft="12dp"
                    android:text="Today"
                    android:textColor="#fff"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

            <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView1"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:text="Hours: 10am to 9pm"
                    android:textColor="#fff"
                    android:textSize="15sp"/>

            <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView3"
                    android:layout_below="@+id/textView3"
                    android:text="Partly Cloudy with a high of 53"
                    android:textColor="#fff"
                    android:textSize="15sp"/>


            <TextView
                    android:id="@+id/header2"
                    style="@style/MenuDrawer.Widget.Category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView4"
                    android:text=" "
                    android:textColor="#fff"/>

            <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_below="@+id/header2"
                    android:text="Tomorrow"
                    android:textColor="#fff"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

            <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_below="@+id/textView5"
                    android:text="Hours: 10am to 10pm"
                    android:textSize="15sp"
                    android:textColor="#fff"/>

            <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView6"
                    android:layout_below="@+id/textView6"
                    android:text="Cloudy with a high of 33"
                    android:textSize="15sp"
                    android:textColor="#fff"/>

            <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_alignTop="@+id/textView3"
                    android:src="@drawable/cloudy"/>

            <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignLeft="@+id/textView5"
                    android:layout_alignTop="@+id/textView6"
                    android:src="@drawable/cloudy"/>

        </RelativeLayout>


        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:onClick="XmasInfo">"

            <TextView
                    android:id="@+id/header"
                    style="@style/MenuDrawer.Widget.Category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ongoing Special Event"
                    android:textColor="#fff"
                    android:fontFamily="sans-serif-light"/>

            <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/header"
                    android:layout_below="@+id/header"
                    android:layout_marginLeft="15dp"
                    android:text="Christmas Town: A BGW Celebration"
                    android:textColor="#fff"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

            <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView8"
                    android:layout_below="@+id/textView8"
                    android:text="Runs from Nov 23rd to Dec 31st"
                    android:textSize="15sp"
                    android:textColor="@color/header_color"/>

            <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView9"
                    android:layout_below="@+id/textView9"
                    android:text="This is an upcharge event"
                    android:textSize="15sp"
                    android:textColor="@color/header_color"/>

        </RelativeLayout>


        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

            <TextView
                    android:id="@+id/header2"
                    style="@style/MenuDrawer.Widget.Category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upcoming Special Event"
                    android:textColor="#fff"
                    android:fontFamily="sans-serif-light"/>

            <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/header"
                    android:layout_below="@+id/header2"
                    android:layout_marginLeft="15dp"
                    android:text="Passmember Preview Weekend 2013"
                    android:textColor="#fff"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

            <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView11"
                    android:layout_below="@+id/textView11"
                    android:text="Date TBA"
                    android:textSize="15sp"
                    android:textColor="#fff"/>

            <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView12"
                    android:layout_below="@+id/textView12"
                    android:text="This is a Passmember only event"
                    android:textSize="15sp"
                    android:textColor="#fff"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

            <TextView
                    android:id="@+id/header3"
                    style="@style/MenuDrawer.Widget.Category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upcoming Special Event"
                    android:textColor="#fff"
                    android:fontFamily="sans-serif-light"/>

            <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/header"
                    android:layout_below="@+id/header3"
                    android:layout_marginLeft="15dp"
                    android:text="Food and Wine Festival 2013"
                    android:textColor="#fff"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

            <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView14"
                    android:layout_below="@+id/textView14"
                    android:text="Date TBA"
                    android:textSize="15sp"
                    android:textColor="#fff"/>

            <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView15"
                    android:layout_below="@+id/textView15"
                    android:text="Specifics TBA"
                    android:textSize="15sp"
                    android:textColor="#fff"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="95dp"
                android:padding="5dp">
            <TextView
                    android:id="@+id/parkHours2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="25dp"
                    android:text="10-11"
                    android:gravity="right"
                    android:textColor="@color/holo_dark"
                    android:background="@android:color/background_light"
                    android:textSize="85sp"/>
            <TextView
                    android:id="@+id/prkhrs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#8000"
                    android:textColor="#fff"
                    android:gravity="center|left"
                    android:paddingTop="2dp"
                    android:paddingLeft="5dp"
                    android:textSize="22sp"
                    android:text="Park Hours"
                    android:fontFamily="sans-serif-light"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="95dp"
                android:padding="5dp">

            <WebView
                    android:id="@+id/webViewWeather"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
            </WebView>

            <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#8000"
                    android:textColor="#fff"
                    android:gravity="center|left"
                    android:paddingTop="2dp"
                    android:paddingLeft="5dp"
                    android:textSize="22sp"
                    android:text="Williamsburg, VA"
                    android:fontFamily="sans-serif-light"/>
        </RelativeLayout>


        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="95dp"
                android:padding="5dp">
            <TextView
                    android:id="@+id/xmastown"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="25dp"
                    android:text="Ends Dec 31st"
                    android:gravity="bottom"
                    android:textColor="@color/holo_dark"
                    android:background="@android:color/background_light"
                    android:textSize="50sp"/>
            <TextView
                    android:id="@+id/xmas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#8000"
                    android:textColor="#fff"
                    android:gravity="center|left"
                    android:paddingTop="2dp"
                    android:paddingLeft="5dp"
                    android:textSize="22sp"
                    android:text="ChristmasTown"
                    android:fontFamily="sans-serif-light"/>

        </RelativeLayout>


        <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="95dp"
                android:layout_margin="5dp"
                android:background="@android:color/background_light"
                android:orientation="vertical"
                android:layout_gravity="center">

            <TextView
                    android:id="@+id/parkhours"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="4"
                    android:layout_row="0"
                    android:layout_rowSpan="2"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="left|top"
                    android:text="Park Hours"
                    android:textColor="@color/holo_dark"
                    android:textSize="25dp"/>

            <TextView
                    android:id="@+id/parkHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnSpan="2"
                    android:layout_gravity="left|bottom"
                    android:layout_row="2"
                    android:layout_rowSpan="2"
                    android:paddingBottom="5dp"
                    android:paddingLeft="25dp"
                    android:text="10-11"
                    android:textColor="@color/holo_dark"
                    android:textSize="55dp"/>


            <TextView
                    android:id="@+id/curTime"
                    android:layout_column="3"
                    android:layout_gravity="top|right"
                    android:layout_margin="2dp"
                    android:layout_row="0"
                    android:text="TextView"
                    android:textColor="@color/card_text"
                    android:textSize="18dp"/>

            <Space
                    android:layout_width="170dp"
                    android:layout_height="1dp"
                    android:layout_column="2"
                    android:layout_row="0"/>

            <Space
                    android:layout_width="1dp"
                    android:layout_height="21dp"
                    android:layout_column="0"
                    android:layout_row="0"/>
        </GridLayout>


        <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="95dp"
                android:layout_margin="5dp"
                android:background="@android:color/background_light"
                android:layout_gravity="center">

            <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="left|top"
                    android:paddingLeft="16dp"
                    android:layout_margin="2dp"
                    android:layout_row="0"
                    android:text="Willamsburg"
                    android:textColor="@color/card_text"
                    android:textSize="25dp"/>

            <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_gravity="right|bottom"
                    android:layout_margin="2dp"
                    android:layout_row="0"
                    android:textColor="@color/holo_dark"
                    android:textSize="14dp"/>


            <ImageView
                    android:id="@+id/conditionsIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:layout_row="1"
                    android:layout_rowSpan="3"
                    android:src="@drawable/cloudy"/>


            <TextView
                    android:id="@+id/conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="left|bottom"
                    android:layout_margin="2dp"
                    android:layout_row="3"
                    android:text="Cloudy"
                    android:textColor="@color/holo_dark"
                    android:textSize="18dp"/>

            <TextView
                    android:id="@+id/temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_gravity="right|bottom"
                    android:layout_row="3"
                    android:text="72"
                    android:textColor="@color/holo_dark"
                    android:textSize="55dp"/>
        </GridLayout>


        <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="95dp"
                android:layout_margin="5dp"
                android:background="@android:color/background_light"
                android:orientation="vertical"
                android:layout_gravity="center">

            <TextView
                    android:id="@+id/xmas"
                    android:text="ChristmasTown"
                    android:textColor="@color/card_text"
                    android:textSize="25dp"
                    android:paddingLeft="16dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="left|top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="2012"
                    android:textSize="18dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_gravity="right|top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="Ends on Dec 31st"
                    android:textColor="@color/holo_dark"
                    android:textSize="20dp"
                    android:paddingLeft="25dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="left|bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </GridLayout>

    </LinearLayout>

</ScrollView>