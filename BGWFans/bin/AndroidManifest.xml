        <activity android:name="com.david.bgwfans.HOS_Map"
            		android:uiOptions="splitActionBarWhenNarrow"/>
        <activity android:name="com.david.bgwfans.BGWFans"/>
        <activity android:name="com.david.bgwfans.Forums"/>
        <activity android:name="com.david.bgwfans.Wiki"/>
        <activity android:name="com.david.bgwfans.Settings"/>
        <activity android:name="com.david.bgwfans.About"/>
        <activity android:name="com.david.bgwfans.Mistletoe"/>
        <activity android:name="com.david.bgwfans.Polar"/>
        <activity android:name="com.david.bgwfans.Palace"/>
