<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.david.bgwfans"
    android:versionCode="1"
    android:versionName="1.0" >

   <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_CORSE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<permission
          android:name="com.david.bgwfans.MAPS_RECEIVE"
          android:protectionLevel="signature"/>
        <uses-permission android:name="com.david.bgwfans.permission.MAPS_RECEIVE"/>
        
        <uses-feature
  			android:glEsVersion="0x00020000"
  			android:required="true"/>

    <application
        android:label="BGWFans"
        android:icon="@drawable/icon"
        android:logo="@drawable/bgwhite"
        android:theme="@style/Theme.bgwfans"
        android:hardwareAccelerated="true"
        android:allowBackup="true">
        <meta-data
    	android:name="com.google.android.maps.v2.API_KEY"
    	android:value="AIzaSyAz1TiujG7GbWK9TCcApqdhK-eTaa3g-Z4"/>
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="com.david.bgwfans.InfoScreen">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            
            <!-- This allows for the app to pick up on any links of the site, and add as an option to open with the app instead of with a browser -->
            	<intent-filter>
    				<action android:name="android.intent.action.VIEW" />
    				<category android:name="android.intent.category.DEFAULT"/>
  					<category android:name="android.intent.category.BROWSABLE"/>
  					<data android:scheme="http" android:host="bgwfans.com"/>
    				<data android:scheme="http" android:host="www.bgwfans.com"/>
    				<data android:scheme="http" android:host="parkfans.net"/>
    				<data android:scheme="http" android:host="www.parkfans.net"/>
				</intent-filter>
						
        </activity>
        <activity android:name="com.david.bgwfans.WindowSample" />
        <activity android:name="com.david.bgwfans.ContentSample" />
        <activity android:name="com.david.bgwfans.ListActivitySample" />
        <activity android:name="com.david.bgwfans.Attractions"/>
        <activity android:name="com.david.bgwfans.Verbolten"
            	  android:parentActivityName="com.david.bgwfans.Attractions"/>
        <activity android:name="com.david.bgwfans.Shows"/>
        <activity android:name="com.david.bgwfans.Coasters"/>
        <activity android:name="com.david.bgwfans.MapScreen"
            		android:uiOptions="splitActionBarWhenNarrow"/>
        <activity android:name="com.david.bgwfans.ParkMap"
            		android:uiOptions="splitActionBarWhenNarrow"/>
        <activity android:name="com.david.bgwfans.HOS_Houses"/>
