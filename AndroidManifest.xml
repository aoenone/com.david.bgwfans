<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.david.bgtfans"
          android:versionCode="1"
          android:versionName="1.0.0">

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="19"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_CORSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- Minimum permissions for Beyondar -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- For beyondar this is not mandatory unless you want to load something from internet (for instance images) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--  BeyondAR needs the following features-->
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.sensor.accelerometer" />
    <uses-feature android:name="android.hardware.sensor.compass" />

    <permission
            android:name="com.david.bgtfans.MAPS_RECEIVE"
            android:protectionLevel="signature" />
    <uses-permission android:name="com.david.bgtfans.permission.MAPS_RECEIVE"/>

    <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true"/>

    <application
            android:label="BGTFans"
            android:icon="@drawable/iconv2"
            android:logo="@drawable/bgwhite"
            android:theme="@style/MainTheme"
            android:hardwareAccelerated="true"
            android:allowBackup="true"
            android:largeHeap="true">

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
                android:name="com.google.android.maps.v2.API_KEY"
                android:value="AIzaSyDBrknSkj1jt1dkNIy8n2crFk1uf3ZaCGc"/>
        <uses-library android:name="com.google.android.maps"/>

        <activity android:name="com.google.ads.AdActivity"
                  android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>

        <activity android:name="com.amazon.device.ads.AdActivity" android:configChanges="keyboardHidden|orientation|screenSize"/>

        <receiver android:name="com.david.bgtfans.widget.HOSWidget" android:label="BGWFans" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/hos_widget" />
        </receiver>

        <activity
                android:name="com.david.bgtfans.bgt.MainActivity"
                android:alwaysRetainTaskState="true"
                android:uiOptions="splitActionBarWhenNarrow">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity android:name=".bgt.BGT3DActivity" />
        <activity android:name=".ArticleActivity" />
        <activity android:name=".bgt.AttractionActivity" />

        <activity android:name=".webviews.HiddenWiki"
                  android:uiOptions="splitActionBarWhenNarrow">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="http" android:host="bgwfans.com"/>
                <data android:scheme="http" android:host="www.bgwfans.com"/>
                <data android:scheme="http" android:host="parkfans.net"/>
                <data android:scheme="http" android:host="www.parkfans.net"/>
            </intent-filter>
        </activity>
        <service android:name=".geofence.ReceiveTransitionsIntentService" android:exported="false"></service>
    </application>
</manifest>